<%= form_for @cuisine do |f| %>
<div class="row">
  <div class="form-group col-md-2">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<%= link_to "Voltar", root_path, class: "btn btn-default" %>
<%= f.submit 'Enviar', class: "btn btn-primary" %><br>
<% end %>
<br>
<%= flash[:error] %>
<br>
<%= render partial: 'shared/error', locals: {error: @cuisine} %>