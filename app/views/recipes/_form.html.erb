<%= form_for @recipe do |f| %>
<div class="col-md-10">
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :title, 'TÃ­tulo' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2">
     <%= f.label :recipe_type_id %>
     <%= f.collection_select :recipe_type_id, @recipe_types, :id, :name,
       { include_blank: false }, {class: "form-control"} %>
    </div>

   <div class="form-group col-md-2">
     <%= f.label :cuisine_id %>
     <%= f.collection_select :cuisine_id, @cuisines, :id, :name,
       { include_blank: false }, {class: "form-control"} %>
   </div>
  </div>
  <div class="row">
   <div class="form-group col-md-2">
     <%= f.label :difficulty %>
     <%= f.text_field :difficulty, class: "form-control" %>
   </div>

   <div class="form-group col-md-2">
     <%= f.label :cook_time %>
     <%= f.text_field :cook_time, class: "form-control" %>
   </div>
  </div>
  <div class="row">
   <div class="form-group col-md-4">
     <%= f.label :ingredients %>
     <%= f.text_area :ingredients, class: "form-control" %>
   </div>
  </div>
  <div class="row">
   <div class="form-group col-md-4">
     <%= f.label :method %>
     <%= f.text_area :method, class: "form-control" %>
   </div>
  </div>
  <div class="row">
   <div class="form-group col-md-4">
     <%= f.label :image, 'Insira uma foto da receita' %>
     <%= f.file_field :image, as: :file, class: "form-control" %>
   </div>
  </div>
  <%= link_to "Voltar", root_path, class: "btn btn-default" %>
  <%= f.submit 'Enviar', class: "btn btn-primary" %>
</div>
<% end %>

<%= render partial: 'shared/error', locals: {error: @recipe} %>