<div class="row">
  <div class="col-md-5">
    <h1>My CookBook</h1>
    <p>Bem-vindo ao maior livro de receitas online</p>
  </div>

  <div class="col-md-6">
    <nav class="navbar navbar-default" role="navigation">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Início', root_path %></li>
          <li><%= link_to 'Enviar uma receita', new_recipe_path %></li>
          <li><%= link_to 'Cadastrar uma cozinha', new_cuisine_path %></li>
          <li><%= link_to 'Cadastrar um tipo de receita', new_recipe_type_path %></li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h2>Tipo</h2>
    <% @recipe_types.each do |recipe_types| %>
      <li><%= link_to recipe_types.name, recipe_type_path(recipe_types.id)%></li>
    <% end %>
    <h2>Cozinha</h2>
    <% @cuisines.each do |cuisine| %>
      <li><%= link_to cuisine.name, cuisine_path(cuisine.id)%></li>
    <% end %>
  </div>
  <div class="col-md-4">
    <h2>Últimas Receitas</h2>
    <% @recipes.each do |recipe| %>
      <div class="col-md-6">
        <h1><%= link_to recipe.title, recipe %></h1>
        <ul>
          <li>Tipo:
            <%= recipe.recipe_type.name %></li>
          <li>Cozinha:
            <%= recipe.cuisine.name %></li>
          <li>Dificuldade:
            <%= recipe.difficulty %></li>
          <li>Tempo de preparo:
            <%= recipe.cook_time %>
            minutos</li>
        </ul>
      </div>
    <% end %>
  </div>
</div>